<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center|bottom"
    android:background="@drawable/bg_sheet_bottom"
    android:elevation="@dimen/bottom_sheet_elevation"
    android:gravity="top|center"
    android:orientation="vertical"
    android:paddingStart="@dimen/screen_padding"
    android:paddingEnd="@dimen/screen_padding"
    android:paddingBottom="@dimen/screen_padding"
    app:behavior_hideable="true"
    app:layout_behavior="@string/bottom_sheet_behavior">

    <include layout="@layout/sheet_grapple" />

    <com.google.android.material.textview.MaterialTextView
        style="@style/AppTheme.BottomSheet.Route.Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/sheet_route_finish_title" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/sheet_bottom_route_finish_button"
        style="@style/AppTheme.BottomSheet.Route.Button"
        android:text="@string/sheet_route_finish_button" />

</LinearLayout>